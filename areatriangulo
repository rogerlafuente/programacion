#include"stadfx.h"
#include<iostream>
#include<cmath>
using namespace std;
int main() 
{
	float a,b,c,p,Area;
	cout << "ingrese lado a:" << endl;
	cin >> a;
	cout << "ingrese lado b:" << endl;
	cin >> b;
	cout << "ingrese lado c:" << endl;
	cin >> c;
	p = (a+b+c)/2;
	Area = sqrtf(p*(p-a)*(p-b)*(p-c));
	cout << "el Area es:" << Area << endl;
	return 0;
}

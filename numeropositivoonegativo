#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{ int A;
  cout << "Ingrese el numero: ";
  cin >> A;
  if (A>=0)
	  cout << endl <<"Es positivo" << endl << endl;
  else
      cout << endl <<"Es negativo" << endl << endl;
  
  getch();

}
